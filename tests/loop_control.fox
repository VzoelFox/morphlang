cetak("Test Loop Control")

# 1. Break
cetak("--- Break Test ---")
i = 0
selama i < 10
  jika i == 5
    berhenti
  akhir
  cetak(i)
  i = i + 1
akhir
cetak("Break selesai.")

# 2. Continue
cetak("--- Continue Test ---")
i = 0
selama i < 5
  i = i + 1
  jika i == 3
    lanjut
  akhir
  cetak(i)
akhir
cetak("Continue selesai.")

# 3. Nested Loop
cetak("--- Nested Loop Test ---")
x = 0
selama x < 3
  y = 0
  selama y < 3
    jika y == 1
      berhenti
    akhir
    cetak("x: #{x}, y: #{y}")
    y = y + 1
  akhir
  x = x + 1
akhir
cetak("Nested selesai.")
